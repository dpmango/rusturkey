  size: 15px

.ico-fb
  background-image: svg-load('../../images/svg/ico-fb.svg', fill=#FFF)
  size: 15px

.ico-rss
  background-image: svg-load('../../images/svg/ico-rss.svg', fill=#FFF)
  size: 15px

.ico-ok
  background-image: svg-load('../../images/svg/ico-ok.svg', fill=#FFF)
  size: 15px
